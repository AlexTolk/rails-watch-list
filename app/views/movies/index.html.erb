<nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand">Movierate</a>
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-sm mt-10">
      <div class="card">
       <h2>+List</h2>
      </div>
    </div>

      <div class="col-sm mt-10">
        <div class="card">
          <h2>list - name</h2>
        </div>
      </div>

    <ul class="col-sm">
      <h2>Your movies:</h2>
      <% @movies.each do |movie| %>
        <%= link_to movie_path(movie.id), action: 'go' do %>
          <li class="card" style="height: 100px; margin: 10px">
            <div class="card-body d-flex">
              <div class="img-thumbnail">
                <%= image_tag movie.poster_url || 'https://i.pinimg.com/736x/e0/f4/ba/e0f4baaf2bf43934f69db75d4726f9fb.jpg', alt: "Poster", width: 38, height: 64 %>
              </div>
              <div class="d-flex justify-content-between">
                <h4 class="ml-20"><%= movie.title %></h4>
                <p>Rating: <%= movie.rating %></p>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>

      <li class="card" style="height: 50px; margin: 10px; padding: 10px">
        <p class="d-flex justify-content-center"> <%= link_to '+movie',  new_movie_path(@movies.create) %> </p>
      </li>
    </ul>
  </div>
</div>
