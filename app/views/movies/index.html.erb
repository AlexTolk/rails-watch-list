<div class="container text-center">
  <h1 class="text-black display-1 mb-5">Movies on Movierate</h1>
  <%= link_to new_movie_path(@movies.create) do %>
    <div class="btn btn-dark">
      <h1 class="text-white"> + movie </h1>
    </div>
  <% end %>
  <div class="d-flex flex-wrap">
    <% @movies.each do |movie| %>
      <%= link_to movie_path(movie.id) do %>
          <div class="card bg-dark rounded-lg shadow-lg" style="padding: 10px; margin:20px; width: 250px; height: 450px">
              <div class="card-img-top">
                <%= image_tag movie.poster_url || 'https://i.pinimg.com/736x/e0/f4/ba/e0f4baaf2bf43934f69db75d4726f9fb.jpg', alt: "Poster", width: 180, height: 250 %>
              </div>
              <div class="card-body d-flex flex-wrap">
                <h4 class="card-title text-white"><%= movie.title %></h4>
                <p class="text-truncate text-white"><%= movie.overview %></p>
                <div class="card-footer text-white" style="padding: 0; height: 30px">
                  <p>Rating: <%= movie.rating %></p>
                </div>
              </div>
          </div>
      <% end %>
    <% end %>
  </div>
</div>
