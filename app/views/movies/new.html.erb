<div class="container" style="margin-bottom:5rem;">
  <div class="text-center" style="margin-bottom:5rem;">
    <h1 class="text-white mb-5">Add a new movie</h1>
  </div>
  <div class="d-flex flex-row">
    <div class="" style="margin-right: 5rem;">
      <img src="/images/movie.jpg" alt="neon sign" class="rounded">
    </div>
    <div>
      <%= simple_form_for [@movie] do |f| %>
        <%= f.input :title %>
        <%= f.input :rating, collection: 1..10 %>
        <%= f.input :overview %>
        <%= f.input :poster_url %>
        <div class="btn btn-danger"><%= f.button :submit %></div>
      <% end %>
    </div>
  </div>
</div>
