<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-warning">
    <nav class="bg-dark d-flex flex-row justify-content-between align-items-center shadow-lg", style="margin-bottom: 5rem;">
      <div style="padding: 2rem;">
        <%= link_to movies_path do %>
          <h1 class="text-white">Movierate</h1>
        <% end %>
      </div>

        <ul class="list-inline", style="padding: 2rem;">
          <%= link_to movies_path do %>
            <li class="text-white p-10 list-inline-item", style="margin-right:2rem;">Movies</li>
          <% end %>
          <%= link_to lists_index_path do %>
            <li class="text-white p-10 list-inline-item", style="margin-left:2rem;">Watch list</li>
          <% end %>
        </ul>

    </nav>
    <div class="container bg-gray">
      <%= yield %>
    </div>
  </body>
</html>
