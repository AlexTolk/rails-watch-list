
<div class="container text-center">
  <h1 class="text-white">All movie lists:</h1>
  <div class="btn btn-danger rounded" style="height: 45px; width:150px; margin: 20px 0 10px 15px">
    <%= link_to new_list_path do%><h4 class="text-white">âž• new</h4><% end %>
  </div>
  <div class="d-flex flex-wrap">
    <% @lists.each do |list| %>

        <%= link_to list_path(list.id), action: 'go' do %>
          <div class="card bg-dark" style="width: 350px; margin: 50px 20px 20px 20px; padding:5px">
            <img class="card-img shadow-lg" src="https://tolfashortfilmfest.it/wp-content/uploads/2018/01/1-1140x760.jpg" alt="Card image"  style="height: 250px; width:340px">
            <div class="class-body">
              <h2 class="card-title text-white"  style="padding:0; margin: 0px;"> <%= list.name %> </h2>
            </div>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
